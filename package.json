{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "name": "saucebase",
    "description": "A complete saas boilerplace powered with Vue, Filament, InertiaJS, and more",
    "type": "module",
    "scripts": {
        "build": "vite build && vite build --ssr",
        "build:ssr": "vite build && vite build --ssr",
        "dev": "vite",
        "preview": "vite preview",
        "host": "vite --host",
        "format": "prettier --write resources/ modules/**/resources/",
        "format:check": "prettier --check resources/ modules/**/resources/",
        "test": "playwright test",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:report": "playwright show-report",
        "screenshots": "npm run build && tsx scripts/capture-screenshots.ts",
        "videos": "npm run build && tsx scripts/capture-videos.ts",
        "prepare": "husky",
        "commitlint": "commitlint --edit",
        "lint": "eslint ./resources ./modules/*/resources --fix --no-error-on-unmatched-pattern",
        "saucebase": "tsx scripts/saucebase.ts"
    },
    "devDependencies": {
        "@clack/prompts": "^1.0.0",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.19.0",
        "@faker-js/faker": "^10.1.0",
        "@iconify/json": "^2.2.357",
        "@inertiajs/vue3": "^2.2.7",
        "@playwright/test": "^1.54.1",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/postcss": "^4.1.11",
        "@tailwindcss/vite": "^4.1.11",
        "@vitejs/plugin-vue": "^5.0.0",
        "@vue/eslint-config-typescript": "^14.3.0",
        "concurrently": "^9.0.1",
        "dotenv": "^17.2.1",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-vue": "^9.33.0",
        "husky": "^9.1.7",
        "laravel-vite-plugin": "^1.2.0",
        "lint-staged": "^16.2.3",
        "picocolors": "^1.1.1",
        "postcss": "^8.4.31",
        "prettier": "^3.3.0",
        "prettier-plugin-organize-imports": "^4.0.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.11",
        "tsx": "^4.19.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.23.0",
        "unplugin-icons": "^22.1.0",
        "vite": "^6.4.1",
        "vue": "^3.4.0",
        "vue-tsc": "^2.0.24"
    },
    "dependencies": {
        "@vue/server-renderer": "^3.5.22",
        "@vueuse/core": "^13.9.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "laravel-vue-i18n": "^2.8.0",
        "lucide-vue-next": "^0.525.0",
        "reka-ui": "^2.7.0",
        "tailwind-merge": "^3.3.1",
        "tw-animate-css": "^1.3.5",
        "vue-sonner": "^2.0.9"
    },
    "engines": {
        "node": ">=22.0.0",
        "npm": ">=10.5.1"
    },
    "lint-staged": {
        "**/*.{js,ts,vue}": [
            "eslint --fix",
            "prettier --write"
        ],
        "!(*.{js,ts,vue})": "prettier --write --ignore-unknown"
    }
}
